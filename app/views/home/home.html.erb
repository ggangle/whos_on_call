    <div class="row">
      <div class="col-xs-12" style="text-align: center;"><h1>Who's On Call?</h1></div>
    </div>

    <br>
    <br>

    <div class="container">
      <div class="row", align="center">
        <% @collected.each do |id, on_call| %>
          <div class="col-xs-4">
            <h2><%= on_call[:title] %></h2>
              <div class="position">Primary:</div>
              <div class="name"><%= on_call[:primary]["user"]["name"] %></div>
              <div class="position">Secondary:</div>
              <div class="name"><%= on_call[:secondary].try(:[], "user").try(:[], "name") || "N/A" %></div>
              <div class="position">Next Rotation:</div>
              <div class="name"><%= Date.parse(on_call[:primary]["end"]).strftime("%m/%d/%y") %></div>
              <br>
              <br>
          </div>
        <% end %>
      </div>
    </div>

    <script type="text/javascript"> setTimeout(function() { window.location.reload();
    }, 15000);
    </script>



