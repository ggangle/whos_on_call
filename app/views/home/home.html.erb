    <div class="row">
      <div class="col-xs-12" style="text-align: center;"><h1>Who's On Call?</h1></div>
    </div>

    <br>
    <br>

    <div class="container">
      <div class="row", align="center">
        <% @user_records.each do |id, user_record| %>
          <div class="col-xs-4">
            <h2><%= user_record[:title] %></h2>
              <div class="position">Primary:</div>
              <div class="name"><%= user_record[:primary]["user"]["name"] %></div>
              <div class="phone"><%= number_to_phone(user_record[:primary_phone], area_code: true) %></div>
              <div class="position">Secondary:</div>
              <div class="name"><%= user_record[:secondary].try(:[], "user").try(:[], "name") || "N/A" %></div>
              <div class="position">Next Rotation:</div>
              <div class="name"><%= Date.parse(user_record[:primary]["end"]).strftime("%m/%d/%y") %></div>
              <br>
              <br>
          </div>
        <% end %>
      </div>
    </div>

    <script type="text/javascript"> setTimeout(function() { window.location.reload();
    }, 15000);
    </script>



